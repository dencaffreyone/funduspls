<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>{% block meta_title %}{{ app.request.attributes.get('meta_title', 'Techknowledgence') | raw }}{% endblock %}</title>
    <meta name="keywords" content="{{ app.request.attributes.get('meta_keywords') | raw }}"/>
    <meta name="description" content="{{ app.request.attributes.get('meta_description') | raw }}"/>

    {% block stylesheets %}
        {{ encore_entry_link_tags('css/frontend') }}
    {% endblock %}
</head>
<body {% block body_attr %}{% endblock %}>
{% block document %}
