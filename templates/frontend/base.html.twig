{#                            <div class="-white_line"></div>#}
{#                            <div class="header__flag"></div>#}
                        </div>
                    </div>
                </div>
                <div class="header__nav">
                    <div class="block__in">
                        <nav class="header__nav">
                            <a href="{{ path('homepage') }}" class="header__logo">
                                {#<img src="{{ asset('build/images/logo.svg') }}" alt="Logo">#}
                            </a>

                            <div class="header__nav_menu">
                                <ul class="header__nav_list">
                                    <li class="header__nav_item"><a href="{{ path('homepage') }}" class="header__nav_link" title="{{ 'Home' | trans }}">{{ 'Home' | trans }}</a></li>
                                    <li class="header__nav_item"><a href="" class="header__nav_link" title="{{ 'About us' | trans }}">{{ 'About us' | trans }}</a></li>
                                    <li class="header__nav_item"><a href="" class="header__nav_link" title="{{ 'Service' | trans }}">{{ 'Service' | trans }}</a></li>
                                    <li class="header__nav_item"><a href="" class="header__nav_link" title="{{ 'Projects' | trans }}">{{ 'Projects' | trans }}</a></li>
                                    <li class="header__nav_item"><a href="{{ path('homepage') }}#contact" class="header__nav_link" title="{{ 'Contact' | trans }}">{{ 'Contact' | trans }}</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </header>
        </div>
        <div class="layout--container">
            {% block body %}{% endblock %}
        </div>
        <div class="layout--footer">
            <footer class="footer block">
                <div class="footer__triangle">
                    <svg width="100%" viewBox="0 0 100 100" preserveAspectRatio="none" height="120">
                        <polygon fill="#95a3b6" points="0 0, 70 90, 100 0"></polygon>
                        <polygon fill="#00cab6" fill-opacity="0.7" points="0 0, 90 70, 100 0"></polygon>
                    </svg>
                </div>
                <div class="block__in">
                    <div class="footer__nav">
                        <a href="{{ path('homepage') }}#contact" class="footer__nav_link" title="{{ 'Contact' | trans }}">{{ 'Contact' | trans }}</a>
                        <span class="-footer-line"></span>
                        <a href="{{ path('impressum') }}" class="footer__nav_link" title="{{ 'Impressum' | trans }}">{{ 'Impressum' | trans }}</a>
                        <span class="-footer-line"></span>
                        <a href="{{ path('privacy_policy') }}" class="footer__nav_link" title="{{ 'Privacy Policy' | trans }}">{{ 'Privacy Policy' | trans }}</a>
                    </div>
