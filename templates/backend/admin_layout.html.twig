{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block side_bar_after_nav %}{% endblock %}
{% block sonata_sidebar_search %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('css/backend') }}

    <link rel="stylesheet" href="{{ asset('vendor/summernote-0.8.11/summernote.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('js/backend') }}

    <!-- bug https://github.com/summernote/summernote/issues/2087 -->
    <!-- bug https://github.com/symfony/webpack-encore/issues/459 -->
    <script type="text/javascript" src="{{ asset('vendor/summernote-0.8.11/summernote.min.js') }}"></script>

    <script type="text/javascript">
		$(document).ready(function() {
			var summernoteConfig = {
				toolbar: [
					['style', ['style']],
					['font', ['bold', 'italic', 'underline', 'clear']],
					['fontname', ['fontname', 'fontsize']],
					['color', ['color']],
					['para', ['ul', 'ol', 'paragraph', 'height']],
					['table', ['table']],
					['insert', ['link', 'picture', 'video']],
					['view', ['fullscreen', 'codeview']]
				]
			};

			$('.summernoteTextArea').summernote(summernoteConfig);
		});
    </script>
{% endblock %}
