{% extends '@SonataAdmin/empty_layout.html.twig' %}

{% block body_attributes %}class="sonata-bc bg-black"{% endblock %}

{% block sonata_page_content %}
    <div id="login-box" class="form-box">
        <div class="header">Authentication</div>
        <form action="{{ path("login_check") }}" method="post" role="form"
              class="form-horizontal">
            <div class="body bg-gray">
                {% if error %}
                    <div class="alert alert-danger alert-error">{{ error.messageKey }}</div>
                {% endif %}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <div class="form-group">
                    <input type="text" class="form-control" id="username"
                           placeholder="Username"
                           name="_username" value="{{ last_username }}"
                           required="required"/>
                </div>

                <div class="form-group control-group">
                    <input type="password" class="form-control" id="password"
                           placeholder="Password"
                           name="_password" required="required"/>
                </div>
            </div>

            <div class="footer">
                <button class="btn bg-ivory btn-block" name="_submit" id="_submit" type="submit">Login</button>
            </div>
        </form>
    </div>
{% endblock %}